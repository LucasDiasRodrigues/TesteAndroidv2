<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TransparentTheme"/>

    <style name="homeHeaderMainInfo" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="homeHeaderTitle" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
